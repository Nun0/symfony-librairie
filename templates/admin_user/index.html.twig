{% extends 'base-backend.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <a href="{{ path('app_admin_user_new') }} " class="btn btn-dark" >Nouveau</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                {# <th>Adresse</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Pays</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                {# <td>{{ user.adresse }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.pays }}</td> #}
                <td class="text-end">
						<a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-dark">
							<i class="align-middle" data-feather="eye"></i>
						</a>
						<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-success ms-2">
							<i class="align-middle" data-feather="edit-2"></i>
						</a>
					</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
