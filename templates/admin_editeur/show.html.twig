{% extends 'base-backend.html.twig' %}

{% block title %}Editeur{% endblock %}

{% block body %}
    <h1>Editeur</h1>
    <div class="d-flex justify-content-between">
		<a href="{{ path('app_admin_editeur_index') }}" class="btn btn-dark">Retour à la liste</a>
		{{ include('admin_editeur/_delete_form.html.twig') }}
	</div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editeur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ editeur.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ editeur.description }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ editeur.logoName }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ editeur.imageName }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ editeur.updatedAt ? editeur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_editeur_edit', {'id': editeur.id}) }}" class="btn btn-success">Editer</a>
{% endblock %}
