{% extends 'base-backend.html.twig' %}

{% block title %}Editeur{% endblock %}

{% block body %}
    <h1>Editeur</h1>
    <a href="{{ path('app_admin_editeur_new') }}" class="btn btn-success">Nouveau</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>LogoName</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for editeur in editeurs %}
            <tr>
                <td>{{ editeur.id }}</td>
                <td>{{ editeur.nom }}</td>
                <td>{{ editeur.description }}</td>
                <td>{{ editeur.logoName }}</td>
                <td>{{ editeur.imageName }}</td>
                <td>{{ editeur.updatedAt ? editeur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_editeur_show', {'id': editeur.id}) }}" class="btn btn-primary"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_admin_editeur_edit', {'id': editeur.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
