{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la Librairie
{% endblock %}
{% block body %}
	<main class="container bg-white shadow">
		<div class="row">
			{% if home.carousels|length > 0 %}
				<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-indicators">
                        {% for carousel in home.carousels %}
						<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{loop.index0}}" class="{% if loop.index0 == 0 %}active{% endif %}" aria-current="true" aria-label="Slide {{loop.index}}"></button>
                        {% endfor %}
					</div>
					<div class="carousel-inner">
                        {% for carousel in home.carousels %}
                            <div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}">
                                <img class="d-block w-100" src="{{ asset('images/carousel/' ~ carousel.imageName ) }}" alt="Slide nÂº{{loop.index}}">
                            </div>
                        {% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			{% endif %}
			<h1>{{home.titre}}</h1>
			<p>{{home.texte|raw}}</p>
		</div>
	</main>
{% endblock %}
