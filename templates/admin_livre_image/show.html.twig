{% extends 'base-backend.html.twig' %}

{% block title %}Médiathèque{% endblock %}

{% block body %}
    <h1>Livre image</h1>
    <div class="d-flex justify-content-between">
		<a href="{{ path('app_admin_livre_image_index') }}" class="btn btn-dark">Retour à la liste</a>
		{{ include('admin_livre_image/_delete_form.html.twig') }}
	</div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre_image.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ livre_image.nom }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ livre_image.updatedAt ? livre_image.updatedAt|date('d-m-Y H:i:s') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if livre_image.imageName is defined and livre_image.imageName is not null %}
                        <a href="{{asset('images/livre/' ~ livre_image.imageName)}}" data-lightbox="{{ livre_image.imageName }}" data-title="{{ livre_image.imageName}}">
                            <img src="{{ asset('images/livre/' ~ livre_image.imageName)}}" alt="" class="img-admin-small">
                        </a>
                    {% else %}
                        N/A
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_livre_image_edit', {'id': livre_image.id}) }}" class="btn btn-success ms-2">
		<i class="align-middle" data-feather="edit-2"></i>
	</a>{% endblock %}
